<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.prokosna.multiple_mybatis_sample.domain.repository.db1.ItemRepository">
    <update id="create">
        create table if not exists items (
            id    bigint primary key,
            name  varchar(256) not null,
            price int          not null
        )
    </update>
    <select id="getAll" resultType="xyz.prokosna.multiple_mybatis_sample.domain.model.Item">
        select *
        from items
    </select>
    <select id="getById" resultType="xyz.prokosna.multiple_mybatis_sample.domain.model.Item">
        select *
        from items
        where id = #{id}
    </select>
    <insert id="save">
        replace into items (id, name, price)
        values (#{id}, #{name}, #{price})
    </insert>
    <update id="clear">
        truncate table items
    </update>
</mapper>